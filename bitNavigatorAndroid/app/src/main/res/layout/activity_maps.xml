            android:layout_height="wrap_content"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"

            tools:layout="@layout/abc_action_bar_view_list_nav_layout" />

        <!--  Header  Starts-->
        <!--  Header Ends -->
